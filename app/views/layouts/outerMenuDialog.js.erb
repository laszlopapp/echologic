/**
 * Template to change static menu, tabs and static content via JS.
 */

/* Write render output into JS variables for later use. */
var content = "<%= escape_javascript(render(:partial => request[:action])) %>";
var title = "<%= title %>";
var dialogWidth = <%= dialog_width ||= 750 %>;

$('#dialog_container').html(content);

$('#dialog_container').dialog({
  title:    title,
  bgiframe: true,
  modal:    true,
  buttons:  { <%= I18n.t('application.general.close') %>: function() { $(this).dialog('destroy'); }},
  close:    function(event, ui) { $(this).dialog('destroy'); },
  width:    dialogWidth,
  resizable: false,
  dialogClass: "dialog_popup"
});

