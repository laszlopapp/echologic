<%about_path ||= static_path(:about)%>
<%logout ||= true%>

<div id="top_menu_container">

  <%= link_to I18n.t('layouts.outer_menu.logout'),
              signout_path,
              :method => :delete,
              :id => 'logout_button' if current_user_session and logout %>
  <%= link_to(I18n.t('layouts.outer_menu.about'),
              about_path,
              :id => 'about_echo_button',
              :class => 'outerMenuItem') %>
  <%= link_to(I18n.t('layouts.outer_menu.feedback'),
              new_feedback_path,
              :id => 'feedback_button',
              :class => 'outerMenuItem') %>
  <%= link_to 'Blog',
              'http://blog.echo.to',
              :id => 'blog_button',
              :target => '_blank' %>
  
	<!-- Language choose section. -->
	<% link_to('#', :id => 'echo_language_button') do %>
	   <%= I18n.t('layouts.outer_menu.language') %>
	<% end %>

	<%= render :partial => "layouts/components/language_selector" %>
  
</div>
