
<% @profile = profile if defined?(profile) %>
<% tabs = ['overview', 'concernments', 'web_addresses'] %>

<% content_tag :div,
               :id => "profile_details_container",
               :class => "tab_details_container connect",
               :style => (@profile.nil? or @profile.new_record?) ? 'display:none' : '' do %>

    <% content_tag :ul, :id => 'profile_details_tabs' do %>
      <%= content_tag :li, h(@profile.full_name), :id => 'full_name' %>

      <% tabs.each do |tab| %>
        <% content_tag :li do %>
          <%= content_tag :a, I18n.t("connect.details.tabs.#{tab}"), :href => "##{tab}" %>
        <% end %>
      <% end %>

	    <%= close_profile_details %>
	  <% end %>

    <% content_tag :div, :id => 'avatar' do %>
	    <%= render :partial => 'connect/profiles/avatar' %>
	  <% end %>

    <% content_tag :div, :id => 'actions', :class => 'action_bar' do %>
	    <%= render :partial => 'connect/profiles/actions' %>
	  <% end %>

    <% tabs.each do |tab| %>
      <% content_tag :div, :id => tab, :class => 'tab_content_container' do %>
        <%= render :partial => "connect/profiles/#{tab}" %>
      <% end %>
    <% end %>

<% end %>