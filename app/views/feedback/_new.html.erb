
<%= t('feedback.new.welcome') %>

<%= image_tag('page/illustrations/feedback.png', :id => 'mail_illustration') %>

<% form_for :feedback, :url => {:controller => 'feedback', :action => 'create'},
            :html => { :id => 'new_feedback_form', :class => 'echoForm'} do |f| %>

  <p>
    <%= label_tag I18n.t('application.general.name'), nil %><br />
    <%= f.text_field :name, :value => (current_user.full_name rescue "") %><br/>
  </p>

  <p>
    <%= label_tag I18n.t('application.general.email'), nil %><br />
    <%= f.text_field :email, :value => (current_user.email rescue "") %><br/>
  </p>

  <p>
    <%= label_tag I18n.t('feedback.new.message'), nil %><br/>
    <%= f.text_area :message, :rows => 4, :cols => 30, :html => {:id => 'feedback_message'} %>
  </p>

<% end %>

<script type="text/javascript">
	$('#new_feedback_form').ajaxForm({ dataType : 'script' });
</script>