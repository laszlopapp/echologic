/* Write render output into JS variable and put it into the container. */
var content = "<%= escape_javascript(render(:partial => 'new')) %>";
$('#dialog_container').html(content);

/* Create a jqueryUI modal dialog with a send button. */
$('#dialog_container').dialog({
  title:    "Feedback",
  bgiframe: true,
  modal:    true,
  buttons:  {
    "<%= I18n.t('application.general.send') %>":  function() { $('#new_feedback_form').submit(); },
    "<%= I18n.t('application.general.cancel') %>": function() { $(this).dialog('close'); }
  },
  close:    function(event, ui) { $(this).dialog('destroy'); },
  width:    650,
  resizable: false
});

<% if current_user %>
  $('#feedback_message').focus();
<% end %>