<% recipient_name = !@recipient.full_name.blank? ?
                     @recipient.full_name : I18n.t('mailers.echo_member', :locale => @language.code) -%>
<%= I18n.t("mailers.greeting", :name => recipient_name, :locale => @language.code) %>

<%= I18n.t("mailers.user_mail.prefix", :sender => @sender.full_name, :locale => @language.code) %>

"<%= @text %>"

<%= I18n.t("mailers.user_mail.suffix", :url => connect_search_url(:id => @sender.profile.id,
                                                                  :locale => @language.code),
                                       :sender => @sender.full_name,
                                       :locale => @language.code) %>

<%= I18n.t('mailers.bye', :locale => @language.code) %>

<%= I18n.t('mailers.signature', :locale => @language.code) %>