<%
# This partial renders the static echo tabnav.

render_tabnav :main,
              :generate_css => false,
              :html => { :class => 'applicationTabs' } do |tn|

  tn.add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.echo.tabs.echo')
    t.links_to hash_for_echo_path
  end

  tn.add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.echo.tabs.discuss')
    t.links_to :controller => 'static/echo', :action => 'discuss'
  end

  tn.add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.echo.tabs.connect')
    t.links_to :controller => 'static/echo', :action => 'connect'
  end

  tn.add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.echo.tabs.act')
    t.links_to :controller => 'static/echo', :action => 'act'
  end

  tn.add_tab :html => { :class => 'ajaxLink' } do |t|
    t.named I18n.t('static.echo.tabs.echo_on_waves')
    t.links_to :controller => 'static/echo', :action => 'echo_on_waves'
  end

end

%>
