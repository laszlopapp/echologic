<div class="roadmap_tab">
	<%= image_tag("../images/page/icons/under_construction.png", :border => "none") %>
</div>

<% render_tabnav :connect,
                 :generate_css => false, :html => {:class => 'submenu'} do |tn|

  tn.add_tab :html => { :id => 'explore_tab' } do |t|
    t.named I18n.t('layouts.connect.tabs.search')
    t.links_to hash_for_connect_search_path
    t.highlights_on :action => 'search'
    t.highlights_on :action => 'fill_out_profile'
  end

  tn.add_tab :html => {:id => 'roadmap_tab'} do |t|
    value = I18n.t('application.roadmap.title')
    t.named value
		t.links_to connect_roadmap_path
		t.highlights_on :action => :roadmap
  end

end
%>
