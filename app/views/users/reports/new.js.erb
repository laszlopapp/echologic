/**
 * Template to view modal dialog for user reporting.
 */

/* Write render output into JS variables for later use. */
var content = "<%= escape_javascript(render(:partial => 'users/reports/new')) %>";

$('#dialog_container').html(content);

$("input[alt='report_button']").hide();

$('#dialog_container').dialog({
  title:    "<%= I18n.t('users.reports.new.title') %>",
  bgiframe: true,
  modal:    true,
  buttons:  {
    "<%= I18n.t('application.general.send') %>"  : function() { $('#new_report_form').submit(); },
    "<%= I18n.t('application.general.cancel') %>": function() { $(this).dialog('close'); }
  },
  close:    function(event, ui) { $(this).dialog('destroy'); },
  width:    600,
  height:   350,
  resizable: false
});
