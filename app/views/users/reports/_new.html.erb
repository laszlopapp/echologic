<%= I18n.t('users.reports.new.text') %>

<% semantic_form_for @report, :html => { :id => 'new_report_form', :class => ' ajax_form report_form' } do |form| %>

  <% form.inputs do %>
    <%= form.input :reason, :as => :text, :input_html => { :rows => 10 } %>
    <%= form.input :suspect_id, :as => :hidden %>
  <% end %>

  <% form.buttons do %>
    <%= form.commit_button I18n.t('application.general.create'), :button_html => { :alt => 'report_button' } %>
  <% end %>

	<noscript>
	 <%= form.submit(I18n.t('application.general.send'), :class => 'form_button_200') %>
	</noscript>

<% end %>
