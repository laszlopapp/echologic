<% statement_node ||= @statement_node %>
<% content_tag :div, :class => "header active" do %>
  <% content_tag :div, :class => 'header_buttons' do %>
	 <%= navigation_buttons(statement_node, @type,:classes => "add",:origin => params[:origin]) %>
	 <%= render :partial => "statements/descendants", 
              :locals => {:type => @type.to_s.underscore, :display => true,
              :children => @children[@type]} if @children and @children[@type] %>
	<% end %>
  <% content_tag :div, :class => 'add_header_link'  do %>
	  <% if !statement_node.nil? %>
      <%= create_new_child_statement_link(statement_node, @type, :new_level => nil) %>
		<% else %>
		  <%= create_new_question_link(params[:origin]) %>
		<% end %>
  <% end %>
<% end %>
