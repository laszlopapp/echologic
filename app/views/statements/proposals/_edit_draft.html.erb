<% statement_node ||= @statement_node -%>
<% tags ||= @tags %>

<% semantic_form_for statement_node, :html => {:class => "ajax_form incorporate wide_form statement 
                                                          #{statement_node.echoable? ? 'echoable' : ''}"} do |form| -%>
  <%= render :partial => 'statements/form/form_header',
             :locals => {:form => form, :statement_node => statement_node} %>

	<%= render :partial => 'statements/form/form_content',
             :locals => {:form_partial => 'statements/form/incorporation_form',
                         :form => form,
                         :statement_node => statement_node,
                         :headline => I18n.t("application.general.incorporate")} %>
<% end -%>
