var statement = $('#statements > #<%=dom_id(@statement_node)%>');
var double_list = statement.find('#<%= @type.underscore.pluralize %> .doubles_list');

<%if @page.to_i == 1 %>
  panel_height = <%= @children.map{|c| c.total_entries <= 7 ? ((c.total_entries + 1) * 29) : 203}.max %>
  resetChildrenList(double_list, {height: panel_height});
<% end %>

<% @children.each_with_index do |children_group, index| %>

  <% next if children_group.empty? %>
  <% type = @type.to_s.constantize.sub_types[index].to_s.underscore %>
	var children_list = statement.find('#<%= @type.underscore.pluralize %> .children_list:eq(<%= index %>)');
	var elements_list =
      "<%= escape_javascript(render :partial => 'statements/child', :collection => children_group[@offset, @per_page]) %>";

  <% if @page.to_i > 1 %>
	  var scrollpane = statement.find('#<%=@type.underscore.pluralize%> .doubles_list').data('jsp');
	  children_list = scrollpane.getContentPane().find('.children_list:eq(<%= index %>)');
	<% end %>

  children_list.append(elements_list);

	<% if children_group.next_page.nil? %>
	  if (children_list.find('.add_new_button').length == 0) {
	   children_list.append('<%= content_tag :li, create_new_child_statement_link(@statement_node, type) %>');
		}
	<% end %>

<% end %>

var more_element = statement.find('#<%= @type.underscore.pluralize %> .more_pagination');
var pagination_buttons = "<%= escape_javascript(will_paginate(@children.sort{|a, b| b.length <=> a.length}.first,
                                                   :id => 'more_pagination',:class => 'more_pagination',
                                                   :next_label => I18n.t("application.general.more"),
                                                   :renderer => StatementsHelper::MoreRenderer)) %>";
more_element.replaceWith(pagination_buttons);

<% if @page.to_i > 1 %>
  scrollpane.reinitialise();
  scrollpane.scrollToBottom();
<% end %>
statement.find('#<%= @type.underscore.pluralize %> .more_pagination a').addClass('ajax');

statement.data('api').reinitialiseChildren("<%= @type.underscore.pluralize %>");
