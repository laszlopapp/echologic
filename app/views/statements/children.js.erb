
<% type_dom_class = @type.underscore %>
var elements = $("<%= escape_javascript(render :partial => "statements/children_list", :locals => {:type => type_dom_class}) %>");
var statement = $('#statements div.<%=dom_class(@statement_node)%>');
var element = statement.find('#<%= type_dom_class.pluralize %> .headline');

elements.insertAfter(element).animate(toggleParams, 300);

statement.data('api').reinitialiseChildren("<%=type_dom_class.pluralize%>");