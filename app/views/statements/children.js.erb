<% type_dom_class = @type.to_s.underscore %>
var elements = $("<%= escape_javascript(render :partial => @children_list_template, :locals => {:children => @children[@type],
                                                                                                 :type => type_dom_class, 
                                                                                                 :new_level => true}) %>");
var statement = $('#statements div.<%=dom_class(@statement_node)%>');

var headline = statement.find('.children a.<%= type_dom_class.pluralize %>').parent();

headline.next().prepend(elements);
statement.data('api').reinitialiseChildren(".children .<%= type_dom_class.pluralize %>");