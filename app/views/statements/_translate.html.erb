<% statement_node ||= @statement_node -%>
<% old_statement_document ||= @statement_document%>
<% new_statement_document ||= @new_statement_document %>



<% semantic_form_for statement_node, :url => create_translation_statement_node_url(statement_node),
                                     :method => :put,
                                     :html => {:class => "ajax_form wide_form translation statement
                                                          #{statement_node.class.has_embeddable_data? ? statement_node.info_type.code : ''}
                                                          #{statement_node.taggable? ? 'taggable' : ''}
                                                          #{statement_node.echoable? ? 'echoable' : ''}"} do |form| -%>
  <%= render :partial => 'statements/header', :locals => {:statement_node => statement_node} %>
  <%= render :partial => 'statements/form/form_content',
                         :locals => {:form_partial => 'statements/form/translation_form',
                                     :form => form,
                                     :statement_node => statement_node,
                                     :headline =>  I18n.t("discuss.statements.types.#{node_type(statement_node)}"),
                                     :no_language_info => true} %>
<% end -%>

