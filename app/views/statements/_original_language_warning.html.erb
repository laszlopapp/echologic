<% statement_node ||= @statement_node %>
<% statement_document ||= @statement_document %>

<div id="original_language_box"
     class="message_box translation_box_class rounded-box rounded-box-gray-itow with_bg_bw_grad_small"
     style="display: none">

  <%= image_tag 'page/translation/babelfish_left.png',
                :class => 'fish_left' %>
  <%= content_tag :span, statement_document.language.value.upcase, :class => "language_label from_language" %>
  <%= link_to I18n.t('discuss.original_language_warning',
                     :language => statement_node.original_language.value.upcase),
                     my_profile_path,
                      :class => "translation_link profile_link" %>
</div>
