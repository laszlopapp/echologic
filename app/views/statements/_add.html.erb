<% statement_node ||= @statement_node %>
<% type = [@type.classify.constantize.name_for_siblings, @type].uniq.join(' ') %>
<% hide_content ||= false %>

<% content_tag :div,
               :id => "add_#{@type}",
               :class => "statement #{type} add_teaser echoable #{'alternative' if alternative_mode?(@level)}",
               'data-siblings' => (@siblings ? @siblings["add_#{@type}"].to_json : '') do %>
  <%= render :partial => 'statements/add_header' %>
  <%= render :partial => 'statements/add_content', :locals => {:hide_content => hide_content} %>
<% end %>