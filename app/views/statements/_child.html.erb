<%
  statement_document = @children_documents[child.statement_id]
  extra_classes ||= (@current_node && child == @current_node ? 'active' : '')
  extra_classes << " #{child.info_type.code}_link" if child.class.has_embeddable_data?
  new_level ||= false
  label_type ||= nil
  alternative_link ||= (label_type.present? and label_type.eql?('alternative')) ? true : false
%>

<% content_tag :li, :class => child_type, 'statement-id' => child.target_id do %>
	<%= link_to_child(statement_document.title,
	                  child,
	                  :css => extra_classes,
	                  :new_level => new_level,
	                  :type => child_type,
                    :alternative_link => alternative_link) %>
<% end %>