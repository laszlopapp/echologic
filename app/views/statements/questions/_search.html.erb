
<div id="discuss_search_container" class="search_container">

  <!-- Search field -->
  <% content_tag :div, :id => 'search_form', :class => 'ajax_form' do %>
    <%= content_tag :span, '',
                    :class => 'search_field' %>
    <%= text_field_tag 'search_terms',
                       params[:search_terms],
                       :class => 'tag_value_autocomplete',
                       'data-default' => I18n.t("discuss.search.placeholder") %>
    <%= content_tag :span, '',
                    :name => 'submit_button',
                    :class => 'submit_button',
                    :alt => 'search_button' %>
  <% end %>
</div>
