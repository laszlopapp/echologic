<% statement_node ||= @statement_node %>
<% alternatives ||= @alternatives %>

<% content_tag :div, :class => 'alternatives header_block' do %>
  <%= content_tag :span, '', :class => 'alt_border top' %>
  <%= content_tag :span, I18n.t("discuss.statements.headings.alternatives"), :class => 'label' %>

	<%= render :partial => 'statements/children_list',
             :locals => {:label_type => "alternative",
                         :hub => "al#{@statement_node.target_id}",
                         :child_type => @statement_node.class.alternative_types.first.to_s.underscore,
                         :children => alternatives,
                         :new_level => true, 
                         :display => true} %>

  <%= content_tag :span, '', :class => 'alt_border bottom' %>

	<% content_tag :div, :class => 'teaser', :style => 'display: none' do %>
    <%= content_tag :span, '', :class => 'arrow' %>
    <%= content_tag :span, I18n.t('application.general.or'), :class => 'or' %>
  <% end %>
<% end %>