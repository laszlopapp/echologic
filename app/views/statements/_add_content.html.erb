<% statement_node ||= @statement_node %>
<% hide_content ||= false %>

<% content_tag :div, :class => "content", :style => (hide_content ? 'display: none;' : '') do %>
	 <%# content_tag :div, '', :class => 'action_bar', :style => "border-width:0px" %>
	 <% content_tag :div, :class => "summary simple_header_block discuss_right_block" do %>
	 	 <!-- Header -->
     <%= content_tag :h2, I18n.t("discuss.statements.types.#{alternative_mode?(@level) ? 'alternative' : @type}") %>
		 <!-- Teaser text and image -->
	   <% content_tag :div, :class => "statement_content" do %>
	     <%= content_tag :div, image_tag('add_statement_teaser_image.png', :class => 'image', :alt => ''),
                       :class => 'image_container'%>
	     <%= I18n.t("discuss.statements.add_teaser.#{alternative_mode?(@level) ? 'alternative' : @type}") %>
	   <% end %>
	 <% end %>
<% end %> 