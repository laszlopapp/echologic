<% children ||= @children %>
<% new_level ||= false %>
<% label_type ||= child_type %>
<ul class="children_list children_pagination">
  <%= render :partial => 'statements/child', :collection => children, :locals => {:new_level => new_level, :child_type => child_type} %>
  <% if children.blank? or children.current_page == children.total_pages %>
	  <%= add_create_new_statement_button(@statement_node, child_type, :label_type => label_type, :nl => new_level, :bids => params[:bids], :origin => params[:origin], :css => "ajax" ) %>
  <%end%>
</ul>